<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarketFaith.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MarketFaith.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LangagePage}"
        Route="Langage" />
    
    
    <FlyoutItem Title="Login" 
                Icon="icon_about.png">
        <ShellContent Route="LoginPage" 
                      ContentTemplate="{DataTemplate local:LoginPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Sign Up" 
                Icon="icon_feed.png">
        <ShellContent Route="SignUpPage" 
                      ContentTemplate="{DataTemplate local:SignUpPage}" />
    </FlyoutItem>



</Shell>
