<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketFaith.Views.StoreDetailPage"
             Title="StoreDetailPage">
    <StackLayout Margin="20">
        <Image Source="{Binding ImageUrl}"
               HeightRequest="200"
               Aspect="AspectFit"
               x:Name="ImageUrl"
               Margin="0,0,0,20" />
        <Label Text="{Binding StoreName}"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               x:Name="StoreName"
               TextColor="Black"
               Margin="0,0,0,10" />
        <Label Text="{Binding LocationName}"
               FontSize="18"
               HorizontalOptions="Center"
               x:Name="LocationName"    
               TextColor="Black"
               Margin="0,0,0,10" />
        <Label Text="{Binding OpeningHours}"
               x:Name="OpeningHours"
               FontSize="16"
               TextColor="Gray"
               HorizontalOptions="Center" />
        <!-- Autres dÃ©tails du magasin -->
    </StackLayout>
</ContentPage>