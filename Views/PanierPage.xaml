<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketFaith.Views.PanierPage"
             xmlns:local="clr-namespace:MarketFaith.Views"
             xmlns:vm="clr-namespace:MarketFaith.ViewModels"
              BackgroundColor="#F6F6F6"
             Title="PanierPage">

    <StackLayout>
        <CollectionView ItemsSource="{Binding ProduitsPanier}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding Image}" HeightRequest="50" WidthRequest="80" />
                        <Label Text="{Binding Nom}" TextColor="Black"/>
                        <Label Text="{Binding Prix}" TextColor="Black" />
                        <Label Text="{Binding Quantite}"  TextColor="Black"/>
                        <Button Text="Modifier quantitÃ©" TextColor="Black" Clicked="ModifierQuantite_Clicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Label Text="{Binding CoutTotal}" />
    </StackLayout>

</ContentPage>