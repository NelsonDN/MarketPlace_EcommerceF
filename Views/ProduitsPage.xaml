<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketFaith.Views.ProduitsPage"
             Title="ProduitsPage">
    <StackLayout>
        <CollectionView ItemsSource="{Binding Produits}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding Image}" HeightRequest="50" WidthRequest="80" />
                        <Label Text="{Binding Nom}"  TextColor="Black"/>
                        <Label Text="{Binding Prix}" TextColor="Black" />
                        <Button Text="Ajouter au panier" Clicked="AjouterAuPanier_Clicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>